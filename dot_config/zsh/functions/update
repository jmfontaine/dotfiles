function update {
  echo -e "\033[1m────────── Homebrew ──────────\033[0m"
  brew bundle --all --cleanup --global --quiet
  brew upgrade
  brew autoremove --quiet
  echo ""
  echo "\033[1m────────── Antidote ──────────\033[0m"
  source $(brew --prefix)/opt/antidote/share/antidote/antidote.zsh
  antidote update --bundles
}
